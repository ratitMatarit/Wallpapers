<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screens.DisplayMetrics.DisplayMetricActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMetricLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_test_logo" />

    <TextView
        android:id="@+id/txtMetricYourDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="Ваше устройство:"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMetricLogo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMetricYourDevice">

        <TextView
            android:id="@+id/txtMetricPhoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ваше устройство:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgMetricLogo" />

        <TextView
            android:id="@+id/txtMetricScreenSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ваше устройство:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgMetricLogo" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMetricProceed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/display_metrics_btn_proceed"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>